{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "importsNotUsedAsValues": "error",
    "jsx": "preserve",
    "typeRoots": ["types", "node_modules/@types"]
  },
  "include": ["src"]
}
